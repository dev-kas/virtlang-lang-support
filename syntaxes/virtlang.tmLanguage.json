{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "VirtLang",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#identifiers"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.vlls",
				"match": "\\b(let|const|fn|if|else|while|try|catch|return)\\b"
			}]
		},
		"strings": {
			"patterns": [
				{
					"name": "string.quoted.double.vlls",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.vlls",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.single.vlls",
					"begin": "'",
					"end": "'",
					"patterns": [
						{
							"name": "constant.character.escape.vlls",
							"match": "\\\\."
						}
					]
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"name": "comment.block.vlls",
					"begin": "--<",
					"end": ">--"
				},
				{
					"name": "comment.line.vlls",
					"match": "-->.+"
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"name": "constant.numeric.vlls",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				}
			]
		},
		"operators": {
			"patterns": [
				{
					"name": "keyword.operator.vlls",
					"match": "(?<=\\s|\\()(?:\\+|-|\\*|\\/|%|==|!=|<=|>=|&&|\\|\\|)(?=\\s|\\)|$)"
					
				}
			]
		},
		"identifiers": {
			"patterns": [
				{
					"name": "constant.language.vlls",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "entity.name.function.vlls",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\s*(?=\\()"
				},
				{
					"name": "variable.vlls",
					"match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
				}
			]
		}
	},
	"scopeName": "source.vl"
}